<!DOCTYPE html>
<html>
<head>
  <title>Monologue</title>
  <%= stylesheet_link_tag    "monologue/admin/application" %>
  <%= stylesheet_link_tag    "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" %>

  <%= javascript_include_tag "monologue/admin/application" %>
  <%= javascript_include_tag "//cdn.ckeditor.com/4.4.5/full/ckeditor.js" %>
  <%= javascript_include_tag "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js" %>

  <%= csrf_meta_tags %>
</head>
<body> 
  <% if monologue_current_user %>
    <%= render "layouts/monologue/admin/nav_bar" %>
  <% end %>
  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}", class: (name == :notice ? "alert alert-info" : "alert alert-error") %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>